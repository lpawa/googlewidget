        console.log(form.startDate.value);
        var input = _trim(form.startDate.value);
        if (input == "") {
            return;
        }
        console.log(input);
        }

function setDefaultDate(){
  var form = document.getElementById("myform");
  var start = new Date();
  var calendarStartDate = google.calendar.utils.fromDate(start);
  var end = new Date();
  end.setDate(end.getDate() + 14);
  var calendarEndDate = google.calendar.utils.fromDate(end);
  var startDateString = '"'+start.getFullYear()+'-'+start.getMonth()+'-'+start.getDate()+'"';
  form.startDate.value = startDateString;
  var endDateString = '"'+end.getFullYear()+'-'+end.getMonth()+'-'+end.getDate()+'"';
  form.endDate.value = endDateString;
}
window.onload(setDefaultDate());
