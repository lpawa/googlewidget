function drawScreen(){
  console.log("drawing begins");
  var count = (storedEvents && storedEvents.length) || 0;
  var out = '';
  if(storedEvents.length>0){
  for(var i = 0; i < count; ++i) {
    var e = storedEvents[i];
    if ('title' in e) {
      if(e.startTime.minute<10){
      minS = "0"+e.startTime.minute;
      }
      else{
      minS=e.startTime.minute;
      }
         if(e.endTime.minute<10){
      minE = "0"+e.endTime.minute;
      }
      else{
      minE=e.endTime.minute;
      }
      out += '<div id ="div'+ i +'"><li class = "noselect" id = "li'+i+'" onclick="showButtons('+i+')"><span class="title">' + e.title + "</span><br><p>From-<strong>" +e.startTime.date+"/"+e.startTime.month+"/"+e.startTime.year+", "+e.startTime.hour+":"+minS+ "</strong><br> To-<strong>" +e.endTime.date+"/"+e.endTime.month+"/"+e.endTime.year+", "+e.endTime.hour+":"+minE +'</strong></p></li><div class = "noselect check" id = "check'+i+'" style="display:none"><input id="cb'+i+'" type="checkbox" name="Send Invites" value="sendInvites" checked="checked"><label class = "sendInvite">Send Invites to attendees</label><br></div><button class="but'+ i +' green-btn" id ="butA'+ i +'" style="display:none" onclick="CheckHashtag('+i+')" style="display:none">Publish </button > <button class="but'+ i +' green-btn" id ="butB'+ i +'" style="display:none" onclick="PublishandEdit('+i+')">Edit</button></div>\n';
    }
    }
    }
    else{
    out='No events in next 7 days';
    }
  
    
  var html=out;
 document.getElementById('out').innerHTML = html;
 gadgets.window.adjustHeight();
}
function PublishandEdit(id){
  if(!localStorage.getItem("userdata")){
      Popup(id,"login");
    }
  else{  
  var e = storedEvents[id];
  var data = EventTemplate;
  data.title = e.title;
  var str = e.title.replace(/\s/g,'');
  str = str.replace(/\W/g, '');
  data.hashtag = str;
   if(e.details){
  data.description = e.details;
  }
  else{
  data.description = e.title;
  }
  console.log(e.startTime);

 

  data.startDateTime=e.startTime;

  data.endDateTime=e.endTime;



  if($("#cb"+id).is(':checked')){
        var attendee = e.attendees;
        var temp=[];
        for(var i=0;i< attendee.length;i++){
        if(attendee[i].email!=viewer){
          temp.push({
          "email" : attendee[i].email,
          "userId" : ""
          });
        }
        data.attendee = temp;
        console.log("Call Invite function");
        console.log(attendee);
        console.log(temp);

    }
  console.log("Publish and Edit:- ");

  console.log(data);
  str = JSON.stringify(data);
  
  var obj = {};
  obj.data = str;
  obj = JSON.stringify(obj);
  console.log(obj);

   $.ajax({
    url: 'https://staging-app.cavantics.com/api/preEventData',
    headers: {
        'Authorization':'Bearer ' + localStorage.getItem("jwt"),
        'content-type':'application/json',
        'Access-Control-Allow-Origin'  : '*', 
    'Access-Control-Allow-Headers' : 'Content-Type'   
    },
    method: 'POST',
    dataType: "json", 
    data: obj,
    processData: false,
    success: function(datas){
      console.log('success: '+datas);
      if(datas.status=true){
        console.log(datas.responseData);
        var url = 'https://staging-app.cavantics.com/#/admin/moodcapture/edit/' +datas.responseData.id;
        console.log(url);
        openWindow(url);
      }
    }
  });


  }

}
